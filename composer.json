{
    "name": "xloit/xloit-std",
    "type": "library",
    "description": "Xloit Std Library",
    "keywords": [
        "xloit",
        "std",
        "library"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Yudha Setiawan",
            "email": "me@yudhasetiawan.com",
            "homepage": "http://yudhasetiawan.com/"
        }
    ],
    "require": {
        "php": "^5.4 || ^7.0",
        "xloit/xloit-exception": "^0.0",
        "cocur/slugify": "^2.5",
        "doctrine/inflector": "^1.1",
        "zendframework/zend-filter": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
    "suggest": {
        "ext-intl": "Provide the Internationalization extension exposes functionality of the ICU library to PHP."
    },
    "autoload": {
        "psr-4": {
            "Xloit\\Std\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Xloit\\Std\\Test\\": "tests/"
        }
    }
}
